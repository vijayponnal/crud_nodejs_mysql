<html>
    <head>
        <title>CRUD using node js</title>
    </head>
    <body>
        <div class="container">
            <h2><%= title %></h2>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone no</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user){%>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone_no %></td>
                        <td>
                            <button class="btn btn-sm btn-primary">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                            <button class="btn btn-sm btn-success"></button>
                        </td>
                    </tr>
                    })
                </tbody>
            </table>
            </div>
    </body>
</html>